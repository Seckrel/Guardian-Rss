generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL")
  // url = "postgresql://postgres:postgres@psql-kotuko:5432/kotuko_task"
}


model logger {
  id Int @id @default(autoincrement())
  ts DateTime @default(now())
  level String @db.VarChar(10)
  msg String
  meta Json?

  @@index([id, ts])
}